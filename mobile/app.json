{
  "expo": {
    "name": "ProjectSunga",
    "slug": "project-sunga",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/health-scan.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/health-scan.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for medical records.",
        "NSMicrophoneUsageDescription": "This app may use the microphone when recording videos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/health-scan.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.projectsunga",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/health-scan.png"
    },
    "primaryColor": "#000000",
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to scan QR codes.",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone when recording videos.",
          "recordAudioAndroid": true
        }
      ]
    ]
  }
}
